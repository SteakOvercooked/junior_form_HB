{
  "compilerOptions": {
      "noEmit": true,
      "module": "ESNext",
      "moduleResolution": "nodenext",
      "strict": true,
      "lib": ["ESNext", "DOM"],
      "jsx": "react-jsx",
      "downlevelIteration": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "plugins": [
          {
            "name": "typescript-plugin-css-modules"
          }
        ]
  },
  "include": ["src/**/*"]
}